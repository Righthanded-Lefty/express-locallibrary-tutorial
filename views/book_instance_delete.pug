extends layout

block content

  h1 #{title}: #{book_instance._id}

  p #[strong Title:]&nbsp;
    a(href=book_instance.book.url) #{book_instance.book.title}
  p #[strong Imprint:] #{book_instance.imprint}

  p Do you really want to delete this Copy?

  form(method='POST' action='')
    div.form-group
      input#book_instanceid.form-control(type='hidden',name='book_instanceid', required='true', value=book_instance._id )

    button.btn.btn-primary(type='submit') Delete
